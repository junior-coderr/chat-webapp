<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="output.css">
    <link rel="stylesheet" href="css/general.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <title>Document</title>
</head>
<body>
  <div class="max-width bg-[white] h-screen stopHeight:min-h-[650px]">
  <div class="w-full px-10 h-[100%] flex flex-col justify-center bg-white items-center gap-10 overflow-auto stopHeight:gap-0 stopHeight:min-h-[650px]">
    <!-- {{!-- section 1 --}} -->
    <div class=" h-[100%] flex justify-center items-end stopHeight:h-auto">

    <div class="text-4xl font-semibold text-cente pb-10">Login</div>

    </div>


    <!-- {{!-- section 2 --}} -->
    <div class=" h-[100%] flex justify-center items-center stopHeight:h-auto">

    <div class="w-[260px] bg-[#216FB6] p-10 rounded-[12px] vsm:w-[320px] sm:w-[350px]">
      <form action="#" onsubmit="login(event)" class="flex flex-col justify-center items-center w-[100%] gap-5">

        <input class="email" autocomplete="email" type="email" required placeholder="Email">
        <input class="password" type="password" required placeholder="password">
        <div>
          <br>
        <input class="bg-white text-slate-700 cursor-pointer text-center p-2 px-12" type="submit" value="Next" name="submit">
        </div>
      </form>
    </div>

    </div>

    <!-- {{!-- section 3 --}} -->
  <div class=" h-[100%] stopHeight:h-auto">
    <div class="pt-10 flex flex-col justify-center items-center gap-4">
      <h2 class="text-center">Dont have an account?</h2>
      <a href="/signup" class="bg-[#216FB6] p-2 px-5 rounded-[3px] font-semibold text-[#ffffffe0] cursor-pointer">Sign up</a>
    </div>
  </div>


  </div>
  </div>



  <div class="loader-container">

    <div class="w-[250px] h-[250px] bg-[#f0f0f0] p-5 relative rounded-lg flex flex-col justify-start hidden msg">
      
      <span class="absolute right-0 top-0 p-2 text-xl" onclick="close_msg()">
        <i class="bi bi-x"></i>
      </span>

      <div class="text-center">
        <h1 class="text-2xl font-semibold">Oops!</h1>
      </div>
      <div class="h-[100%] flex justify-center items-center">
        <p class="text-xl actual_msg text-center">message </p>
      </div>

    </div>

  <div class="lds-ellipsis hidden"><div></div><div></div><div></div><div></div></div>
  </div>

<script src="js/general.js"></script>
<script src="js/login.js"></script>
</body>
</html>